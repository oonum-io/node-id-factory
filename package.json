{
  "name": "@oonum/id-factory",
  "version": "1.2.3",
  "description": "Nodejs module for making friendlier unique IDs: base32(uuid.v4())",
  "keywords": [],
  "license": "MIT",
  "author": "developers@oonum.com",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "npm run lint",
    "build": "tsc --build tsconfig.json",
    "ci": "npm run test",
    "clean": "rimraf dist coverage",
    "docs": "typedoc --readme README.md --out docs src",
    "prelint": "npm run lint-md && npm run lint-yaml",
    "lint": "eslint src --ext .js,.ts,.json",
    "lint-md": "remark --frail .",
    "lint-yaml": "yamllint **/*.yml **/*.yaml",
    "pretest": "npm run build",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "preversion": "npm run build",
    "postversion": "bash -c \"if [ -z \"$DEPLOY_ENV\" ]; then git push && git push --tags; fi\""
  },
  "dependencies": {
    "@types/mongoose": "^5.7.36",
    "base-x": "3.0.8",
    "mongoose": "^5.10.4",
    "uuid": "8.3.0"
  },
  "devDependencies": {
    "@types/jest": "26.0.13",
    "@types/jsonwebtoken": "8.5.0",
    "@types/node": "14.10.0",
    "@types/uuid": "8.3.0",
    "@typescript-eslint/eslint-plugin": "4.1.0",
    "@typescript-eslint/parser": "4.1.0",
    "eslint": "7.8.1",
    "eslint-config-prettier": "6.11.0",
    "eslint-import-resolver-typescript": "2.3.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-jest": "24.0.0",
    "eslint-plugin-json": "2.1.2",
    "eslint-plugin-prettier": "3.1.4",
    "jest": "26.4.2",
    "prettier": "2.1.1",
    "remark-cli": "8.0.1",
    "remark-lint": "7.0.1",
    "remark-preset-lint-recommended": "4.0.1",
    "rimraf": "3.0.2",
    "ts-jest": "26.3.0",
    "typedoc": "0.19.1",
    "typescript": "4.0.2",
    "yaml-lint": "1.2.4"
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-recommended"
    ]
  }
}
