{
  "name": "@oonum/id-factory",
  "version": "1.2.4",
  "description": "Nodejs module for making friendlier unique IDs: base32(uuid.v4())",
  "keywords": [],
  "license": "MIT",
  "author": "developers@oonum.com",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "npm run lint",
    "build": "tsc --build tsconfig.json",
    "ci": "npm run test",
    "clean": "rimraf dist coverage",
    "docs": "typedoc --readme README.md --out docs src",
    "prelint": "npm run lint-md && npm run lint-yaml",
    "lint": "eslint src --ext .js,.ts,.json",
    "lint-md": "remark --frail .",
    "lint-yaml": "yamllint **/*.yml **/*.yaml",
    "pretest": "npm run build",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "preversion": "npm run build",
    "postversion": "bash -c \"if [ -z \"$DEPLOY_ENV\" ]; then git push && git push --tags; fi\""
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-recommended"
    ]
  },
  "dependencies": {
    "base-x": "3.0.8",
    "mongoose": "5.11.6",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@types/jest": "26.0.18",
    "@types/jsonwebtoken": "8.5.0",
    "@types/node": "14.14.11",
    "@types/uuid": "8.3.0",
    "@typescript-eslint/eslint-plugin": "4.9.1",
    "@typescript-eslint/parser": "4.9.1",
    "eslint": "7.15.0",
    "eslint-config-prettier": "7.0.0",
    "eslint-import-resolver-typescript": "2.3.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.1.3",
    "eslint-plugin-json": "2.1.2",
    "eslint-plugin-prettier": "3.2.0",
    "jest": "26.6.3",
    "prettier": "2.2.1",
    "remark-cli": "9.0.0",
    "remark-lint": "8.0.0",
    "remark-preset-lint-recommended": "5.0.0",
    "rimraf": "3.0.2",
    "ts-jest": "26.4.4",
    "typedoc": "0.19.2",
    "typescript": "4.1.2",
    "yaml-lint": "1.2.4"
  }
}
